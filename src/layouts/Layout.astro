---
import Header from "components/Header.astro";
import "../style/global.css"
export interface Props {
	title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title ? `${title} ☘️ Dreen` : `Dreen`}</title>

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,200;0,300;0,400;0,500;0,700;1,200;1,300;1,400;1,500;1,700&family=Noto+Serif:ital,wght@0,400;0,700;1,400;1,700&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<Header></Header>
		<main>
			<slot />
		</main>
	</body>
</html>

<style is:global>
	:root {
	}

	html {
		font-family: var(--serif);
		background-color: rgba(250, 235, 215, 0.1);
		margin-left: 18%;
		margin-right: 18%;
		margin-top: 1%;
	}

	main {
	}
</style>
