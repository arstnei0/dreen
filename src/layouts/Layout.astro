---
import Header from "components/Header.astro";
import "../style/global.css"
export interface Props {
	title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title ? `${title} ☘️ Dreen` : `Dreen`}</title>

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,200;0,300;0,400;0,500;0,700;1,200;1,300;1,400;1,500;1,700&family=Noto+Serif:ital,wght@0,400;0,700;1,400;1,700&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<Header></Header>
		<main class="a-not-hovering">
			<slot />
		</main>

		<script defer>
			const links = [...document.getElementsByTagName('a')]
			const mainEl = document.getElementsByTagName('main')[0]
			links.forEach(link => {
				link.addEventListener('mouseenter', () => {
					mainEl.classList.replace('a-not-hovering', 'a-hovering')
				})

				link.addEventListener('mouseleave', () => {
					mainEl.classList.replace('a-hovering', 'a-not-hovering')
				})
			})
		</script>
	</body>
</html>

<style is:global>
	:root {
	}

	html {
		font-family: var(--serif);
		background-color: var(--bg-color);
		margin-left: 16%;
		margin-right: 16%;
		margin-top: 1%;
	}

	main {
		margin-top: 2%;
	}
</style>
