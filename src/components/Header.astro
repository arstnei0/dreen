---
import Logo from "./Logo.astro"
import { Icon } from "astro-icon"
---

<nav class="nav-not-hovering">
	<div id="left-nav">
		<a href="/" class="nav-item">
			<Logo size={40} />
		</a>
	</div>
	<div id="right-nav">
		<a class="nav-item" href="/blog">Blog</a>
		<a class="nav-item" href="/components">Components</a>
		<a
			class="nav-item"
			href="https://github.com/zihan-ch/dreen"
			target="_blank"
		>
			<!-- <Icon name="mdi:github" size="30" /> -->
			<svg
				xmlns="http://www.w3.org/2000/svg"
				width="24"
				height="24"
				viewBox="0 0 24 24"
				fill="none"
				stroke="currentColor"
				stroke-width="2"
				stroke-linecap="round"
				stroke-linejoin="round"
				class="feather feather-github"
				><path
					d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"
				></path>
			</svg>
		</a>
	</div>
</nav>

<script lang="ts" defer>
	const navEl = document.querySelector("nav")
	;[...document.getElementsByClassName("nav-item")].forEach((element) => {
		element.addEventListener("mouseenter", (e) => {
			navEl.classList.replace("nav-not-hovering", "nav-hovering")
		})

		element.addEventListener("mouseleave", (e) => {
			navEl.classList.replace("nav-hovering", "nav-not-hovering")
		})
	})
</script>

<style>
	nav {
		display: flex;
		justify-content: space-between;
		font-family: var(--sans);
		font-weight: 500;
		font-size: 1.15em;
		letter-spacing: 0.02em;
	}

	#left-nav,
	#right-nav {
		display: flex;
		align-items: center;
	}

	.nav-item {
		opacity: 0.7;
		transition: all 0.5s ease-out;
		margin-left: 0.6em;
		margin-right: 0.6em;
	}

	.nav-item:hover {
		opacity: 0.9 !important;
		transform: translateY(-0.08em) scale(1.1);
		box-shadow: 0px 0px 20px 20px var(--gl);
		background-color: var(--gl);
	}

	.nav-hovering .nav-item {
		opacity: 0.15;
	}

	nav a,
	[astro-icon] {
		color: #3b2412;
	}
</style>
